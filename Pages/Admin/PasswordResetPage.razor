@page "/admin/reset/{key:guid}"
@inherits PasswordResetPageBase


<div class="d-flex justify-content-center ">
    <img class="img-fluid mb-3" src="/Resources/OnlineBanner1.svg" />
</div>

<div class="d-flex justify-content-center align-items-center" Style="height:40vh">
    <div class="col-9 col-lg-3">
        <div>
            <lable>New Password</lable>
            <input type="password" @bind-value="ResetPassword.NewPassword" />
        </div>
        <div>
            <lable>Repeat Password</lable>
            <input type="password" @bind-value="PasswordDuplicate" />
        </div>
        <div class="d-flex justify-content-around">
            <div>
                <a @onclick="() => CancelPasswordRest_Click()" class="btn btn-danger">
                    Cancel
                </a>
            </div>
            <div>
                <a @onclick="() => SubmitPasswordReset_Click()" class="btn btn-success jay-green-bg">
                    Submit
                </a>
            </div>
        </div>
    </div>
</div>
