
@inherits ForgotPasswordPageBase
@page "/admin/forgotPassword"

<div class="d-flex justify-content-center ">
    <img class="img-fluid mb-3" src="/Resources/OnlineBanner1.svg" />
</div>

<div class="d-flex justify-content-center align-items-center" Style="height:40vh">
    <div class="col-9 col-lg-3">
        <div class="row mt-3">
            Email:
        </div>
        <div class="row">
            <input @bind-value="Email" type="email" aria-label="user name" />
        </div>
        <div class="row mt-3">
            <a class="btn btn-success jay-green-bg" @onclick="() => SubmitPasswordResetRequest_Click()">Submit</a>
        </div>
        @if (!string.IsNullOrWhiteSpace(ErrorMessage))
        {
            <div class="text-danger">
                @ErrorMessage
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(ConfirmationMessage))
        {
            <div class="text-success">
                @ConfirmationMessage
            </div>
        }
    </div>
</div>
