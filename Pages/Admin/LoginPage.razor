@page "/admin/login"
@inherits LoginPageBase


<div class="d-flex justify-content-center ">
    <img class="img-fluid mb-3" src="/Resources/OnlineBanner1.svg" />
</div>

<div class="d-flex justify-content-center align-items-center" Style="height:40vh">
    <div class="col-9 col-lg-3">
        <div class="row mt-3">
            Email:
        </div>
        <div class="row">
            <input @bind-value="Email" type="text" aria-label="user name" />
        </div>
        <div class="row mt-3">
            Password
        </div>
        <div class="row">
            <input @onkeyup="@Enter" @oninput="UpdatePassword" type="password" />
        </div>
        @if (LoginErrorResult != string.Empty)
        {
            <div class="row text-danger fw-bold mt-3">
                @LoginErrorResult
            </div>
        }
        <div class="row mt-3">
            <a class="btn btn-success jay-green-bg"  @onclick="() => Login_Click()">Login</a>
        </div>
        <div class="row mt-3">
            <a class="text-decoration-none" href="/admin/forgotPassword">Forgot your Password?</a>
        </div>
    </div>
</div>
